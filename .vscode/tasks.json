{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build sql ide",
            "type": "shell",
            "command": "cd '${workspaceFolder}/../DataSpark_SQL-IDE' ; npm run build",
        },
        {
            "label": "copy sql ide",
            "type": "shell",
            "command": "cd '${workspaceFolder}/../DataSpark_SQL-IDE/dist' ; copy-Item * -Destination '${workspaceFolder}/tutorial/myapp/staticfiles/sql-ide' -Recurse -force",
            "dependsOn": [
                "build sql ide"
            ]
        },
        {
            "label": "copy apollon",
            "type": "shell",
            "command": "cd '${workspaceFolder}/../DataSpark_Apollon/dist' ; copy-Item * -Destination '${workspaceFolder}/tutorial/myapp/staticfiles/apollon' -Recurse -force",
            "dependsOn": [
                "build apollon"
            ]
        },
        {
            "label": "copy apollon",
            "type": "shell",
            "command": "cd '${workspaceFolder}/../DataSpark_Apollon/dist' ; copy-Item * -Destination '${workspaceFolder}/tutorial/myapp/staticfiles/apollon' -Recurse -force",
            "dependsOn": [
                "build apollon"
            ]
        },
        {
            "label": "venv",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/activate ; pip install -r ${workspaceFolder}/requirements.txt",
            "dependsOn": [
                "copy sql ide",
                "copy apollon"
            ]
        },
        {
            "label": "makemigrations",
            "type": "shell",
            "command": "python ${workspaceFolder}/tutorial/manage.py makemigrations",
            "dependsOn": [
                "venv"
            ]
            
        },
        {
            "label": "migrate",
            "type": "shell",
            "command": "python '${workspaceFolder}/tutorial/manage.py' migrate",
            "dependsOn": [
                "makemigrations"
            ]
        },
        {
            "label": "collectstatic",
            "type": "shell",
            "command": "python '${workspaceFolder}/tutorial/manage.py' collectstatic --noinput",
            "dependsOn": [
                "migrate"
            ]
        },    
        {
            "label": "PreLaunchRoutine",
            "dependsOn": [
                "collectstatic"
            ]
        }
    ]
}
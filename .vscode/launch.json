{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver",
                "localhost:8000"
            ],
            "django": true,
            "program": "${workspaceFolder}/tutorial/manage.py",
            "console": "internalConsole",
            "preLaunchTask": "PreLaunchRoutine",
            "serverReadyAction": {
                "pattern": "Starting development server at http://localhost:([0-9]+)/",
                "action": "startDebugging",
                "name": "Launch Firefox Session"
            }
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch Firefox Session",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}/tutorial/"
        }
    ]
}